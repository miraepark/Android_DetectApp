<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.samsung.detectapp.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="기 본 정 보 입 력"
            android:id="@+id/Text00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_marginTop="60sp"
            android:layout_marginBottom="60sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="조 사 자"
            android:id="@+id/Text01"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>

        <EditText
            android:id="@+id/IName"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint=" 이름을 입력하세요" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp">

        <TextView
            android:id="@+id/Text02"
            android:text="날  짜"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>

        <TextView
            android:id="@+id/DateView"
            android:text="날짜 자동 입력"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp">

        <TextView
            android:id="@+id/Text03"
            android:text="구 조 물"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>

        <EditText
            android:id="@+id/BridgeName"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:hint="건축물 이름을 입력하세요."
            android:imeOptions="actionDone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="40sp">
        <Button
            android:id="@+id/Edit"
            android:text="초기화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickEditBtn"/>

        <Button
            android:id="@+id/CLocate"
            android:text="현재위치"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickCLocateBtn"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"/>
        <Button
            android:id="@+id/Save"
            android:text="저 장"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSaveBtn"/>

    </LinearLayout>



</LinearLayout>
